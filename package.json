{
  "name": "HelloWorld",
  "version": "1.0.0",
  "description": "Demo Microservice",
  "author": "Charles Viegas <charles.viegas@codate.com.br> and Vitor Juc√° <vitor.juca@agrointeli.com.br>",
  "private": true,
  "scripts": {
    "start": "node -r esm main.mjs | bunyan -o short",
    "pretest": "mongodb-runner start",
    "test": "mocha --compilers js:babel-core/register test/* --exit",
    "posttest": "mongodb-runner stop",
    "quality": "eslint ./src/**/*.mjs",
    "postinstall": "node -e \"var s='../src',d='node_modules/src',fs=require('fs');fs.exists(d,function(e){e||fs.symlinkSync(s,d,'dir')});\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:agrointeli/microservice-demo.git"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "bunyan": "^1.8.12",
    "cors": "^2.8.4",
    "helmet": "^3.12.1",
    "cookie-parser": "~1.3.5",
    "esm": "^3.0.49",
    "express": "~4.13.1",
    "mongoose": "^5.2.2"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-preset-env": "1.6.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mongodb-runner": "^3.6.1",
    "supertest": "^3.1.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "6"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": "standard",
    "rules": {
      "indent": [
        2,
        4
      ],
      "quotes": [
        2,
        "single"
      ],
      "space-before-function-paren": 0
    },
    "globals": {}
  }
}
